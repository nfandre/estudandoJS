<h3>Nova postagem: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="POST">
            <label for="titulo">Titulo: </label>
                <input type="text" name="titulo" id="titulo" placeholder="Titulo" class="form-control">
            <label for="slug">Slug: </label>
                <input type="text" name="slug" id="slug" placeholder="Slug da postagem" class="form-control">
             <label for="descricao">Descrição: </label>
                <input type="text" name="descricao" id="descricao" placeholder="Descrição da postagem" class="form-control">
             <label for="conteudo">Conteúdo: </label>
                <textarea  name="conteudo" id="conteudo" placeholder="Conteudo da postagem" class="form-control"></textarea>
            <label for="categoria">Categoria</label>
                <select name="categoria" class="custom-select"> 
                    {{#each categorias}}
                        <option value="{{_id}}">{{nome}}</option>  

                    {{else}}
                         <option value="0">Nenhuma categoria registrada</option>
                    {{/each}}
                       
                </select>
            <button type="submit" class="btn btn-success mt-4">Postar</button>
        </form>
    </div>
</div>